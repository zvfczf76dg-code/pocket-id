{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "go",
      "request": "launch",
      "envFile": "${workspaceFolder}/backend/.env",
      "env": {
        "APP_ENV": "development"
      },
      "mode": "debug",
      "program": "${workspaceFolder}/backend/cmd/main.go",
      "buildFlags": "-tags=exclude_frontend",
      "cwd": "${workspaceFolder}/backend",
    },
    {
      "name": "Frontend",
      "type": "node",
      "request": "launch",
      "envFile": "${workspaceFolder}/frontend/.env",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Development",
      "configurations": [
        "Backend",
        "Frontend"
      ],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    }
  ],
}